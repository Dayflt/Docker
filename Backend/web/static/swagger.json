{
    "openapi": "3.0.0",
    "info": {
      "title": "DAYFLY API for video synthesize",
      "description": "synthesize images and videos.",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:5000",
        "description": "My API"
      }
    ],
    "tags": [
      {
        "name": "model_id",
        "description": "model_id primary key"
      },
      {
        "name": "image_no",
        "description": "user select image"
      },
      {
        "name": "model_result",
        "description": "model url(in gcp)"
      },
      {
        "name": "model_name",
        "description": "user's nickname"
      },
      {
        "name": "category_no",
        "description": "display it to gallery"
      },
      {
        "name": "model_date",
        "description": "generate date"
      }
    ],
    "paths": {
      "/api/model": {
        "post": {
          "summary": "Create video",
          "parameters": [
            {
              "in": "header",
              "name": "Content-Type",
              "description": "multipart/form-data",
              "required": true,
              "schema": {
                "type": "string",
                "example": "multipart/form-data"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "image_no": {
                      "type": "integer",
                      "description": "Image number selected by user"
                    },
                    "file": {
                      "type": "file",
                      "description": "Video uploaded by user via webcam"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Video Created Successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
                        "type": "boolean"
                      },
                      "model_id": {
                        "type": "integer",
                        "example": 1
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Video generation failed"
            },
            "default": {
              "description": "Unexpected error"
            }
          }
        }
      },
      "/api/model/{model_id}": {
        "get": {
          "summary": "Call Outcomes",
          "description": "Returns mixed-video URL via Header's model_id.",
          "parameters": [
            {
              "name": "model_id",
              "in": "path",
              "required": true,
              "description": "model_id of mixed-video generated by user",
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "URL returns Successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "model_result": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "this specified model_id is invalid(not a num)"
            },
            "500": {
              "description": "this specified model_id was not found"
            },
            "default": {
              "description": "Unexpected error"
            }
          }
        },
        "delete": {
          "summary": "Delete Mixed-Video",
          "description": "When the user presses Try again, find and delete the result from db with the model id",
          "parameters": [
            {
              "name": "model_id",
              "in": "path",
              "required": true,
              "description": "model_id of mixed-video generated by user",
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Success to delete the mixed-video",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Sorry! Something went wrong"
            },
            "default": {
              "description": "Unexpected error"
            }
          }
        },
        "patch": {
          "summary": "Update video information(nickname, category num)",
          "description": "When the user presses 'share it', it receives additional input information from the user and updates it.",
          "parameters": [
            {
              "name": "model_id",
              "in": "path",
              "required": true,
              "description": "model_id of mixed-video generated by user",
              "schema": {
                "type": "integer"
              }
            }
          ],
          "requestBody": {
            "description": "Update MIX-VIDEO Information (Adding Emoticons and Category Information)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "category_no": {
                      "type": "integer",
                      "example": 1
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Success to update information",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Sorry! Something went wrong"
            },
            "default": {
              "description": "unexpected error"
            }
          }
        }
      },
      "/api/model/gallery/{category_no}": {
        "get": {
          "summary": "Check Specific Category",
          "description": "Get all video information which belongs to category_no",
          "parameters": [
            {
              "name": "category_no",
              "in": "path",
              "required": true,
              "description": "Number of category selected by the user",
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Success to call mixed-video corresponding to category_no",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "model_id": {
                        "type": "integer"
                      },
                      "model_name": {
                        "type": "string"
                      },
                      "image_no": {
                        "type": "integer"
                      },
                      "category_no": {
                        "type": "integer"
                      },
                      "model_date": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "The requested category_no does not exist"
            },
            "default": {
              "description": "unexpected error"
            }
          }
        }
      }
    }
  }